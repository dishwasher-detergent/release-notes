{
  "name": "@knth/release-notes-cli",
  "version": "2.0.0",
  "description": "Interactive CLI for generating release notes based on git history using Azure OpenAI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "release-notes": "dist/cli.js",
    "rn": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "release-notes",
    "git",
    "ai",
    "azure-openai",
    "cli",
    "typescript",
    "automation",
    "interactive"
  ],
  "author": "Kenny",
  "license": "MIT",
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "chalk": "^5.6.0",
    "commander": "^12.1.0",
    "inquirer": "^12.9.3",
    "openai": "^5.15.0",
    "ora": "^8.2.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
