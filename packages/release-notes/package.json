  "keywords": [
    "release-notes",
    "git",
    "ai",
    "azure-openai",
    "typescript",
    "automation"
  ],
  "author": "Kenny",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.0",
    "openai": "^5.15.0",
    "ora": "^8.2.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "typescript": "^5.5.4",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
